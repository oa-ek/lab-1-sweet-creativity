@using SweetCreativity.Core.Entities;
@model User

<h1>Редагування обліковий запис</h1>

<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" enctype="multipart/form-data">

            @Html.ValidationSummary()

            <input type="hidden" asp-for="Id" />

            <div data="mb-3">
                @Html.DisplayNameFor(model => model.UserName)
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>

            <div data="mb-3">
                @Html.DisplayNameFor(model => model.Email)
                @Html.TextAreaFor(model => model.Email, new { @class = "form-control"})
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div data="mb-3">
                @Html.DisplayNameFor(model => model.Password)
                @Html.TextAreaFor(model => model.Password, new { @class = "form-control"})
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div data="mb-3">
                @Html.DisplayNameFor(model => model.FullName)
                @Html.TextAreaFor(model => model.FullName, new { @class = "form-control"})
                <span asp-validation-for="FullName" class="text-danger" />
            </div>

            <div data="mb-3">
                @Html.DisplayNameFor(model => model.PhoneNumber)
                @Html.TextAreaFor(model => model.PhoneNumber, new { @class = "form-control"})
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>

            <div data="mb-3">
                @Html.DisplayNameFor(model => model.UrlSocialnetwork)
                @Html.TextAreaFor(model => model.UrlSocialnetwork, new { @class = "form-control"})
                <span asp-validation-for="UrlSocialnetwork" class="text-danger" />
            </div>

            <div class="form-group mt-3">
                @Html.DisplayNameFor(model => model.CoverFile)
                <input asp-for="CoverFile" accept="image/*" />
                <span asp-validation-for="CoverFile" class="text-danger"></span>
            </div>

            <br />
            <button type="submit" class="btn btn-success">Зберегти</button>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
